@page
@using Homework4.Aids
@using Homework4.Data.Quantity
@using Homework4.Pages.Extensions
@model Homework4.Soft.Areas.Quantity.Pages.Measures.DetailsModel

@{
    Layout = "_Details";
    const string units = "/Quantity/Units";
    var measureId = GetMember.Name<UnitData>(x => x.MeasureId);
}

<body>
    @Html.DisplayControlsFor(model => model.Item.Code)
    @Html.DisplayControlsFor(model => model.Item.Name)
    @Html.DisplayControlsFor(model => model.Item.Definition)
    @Html.DisplayControlsFor(model => model.Item.ValidFrom)
    @Html.DisplayControlsFor(model => model.Item.ValidTo)
</body>

@section Details
{
    @Html.HypertextLinkFor(string.Empty, new Link("Show units", 
        $"{units}/Index?fixedFilter{measureId}&fixedVale ={Model.Item.Id}"))
}
